{
  "name": "action-tinify",
  "version": "0.1.0",
  "private": true,
  "description": "Compress and resize images with the Tinify API",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "tsc --noEmit && eslint src/**/*.ts",
    "test": "jest",
    "all": "npm run build && npm run format-check && npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/namoscato/action-tinify.git"
  },
  "keywords": [
    "actions",
    "tinify",
    "tinypng",
    "tinyjpg",
    "image",
    "compress",
    "optimize",
    "resize"
  ],
  "author": "Nick Amoscato <nick@amoscato.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^4.0.0",
    "bytes": "^3.1.0",
    "image-size": "^1.0.0",
    "mime": "^3.0.0",
    "tinify": "^1.6.0-beta.2"
  },
  "devDependencies": {
    "@octokit/webhooks": "^9.5.1",
    "@types/bytes": "^3.1.0",
    "@types/jest": "^26.0.23",
    "@types/mime": "^3.0.1",
    "@types/nock": "^11.1.0",
    "@types/node": "^18.11.9",
    "@typescript-eslint/parser": "^4.22.1",
    "eslint": "^7.26.0",
    "eslint-plugin-github": "^4.1.3",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^24.9.0",
    "jest-circus": "^26.6.3",
    "js-yaml": "^4.1.0",
    "nock": "^13.2.9",
    "prettier": "^2.7.1",
    "ts-jest": "^24.3.0",
    "typescript": "^4.2.4"
  }
}
